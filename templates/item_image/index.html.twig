{% extends 'base.html.twig' %}

{% block title %}ItemImage index{% endblock %}

{% block body %}
    <h1>ItemImage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Path</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_image in item_images %}
            <tr>
                <td>{{ item_image.id }}</td>
                <td>{{ item_image.name }}</td>
                <td>{{ item_image.path }}</td>
                <td>
                    <a href="{{ path('item_image_show', {'id': item_image.id}) }}">show</a>
                    <a href="{{ path('item_image_edit', {'id': item_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('item_image_new') }}">Create new</a>
{% endblock %}
