<body>

{% if isLightNave == true %}
<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    {% else %}
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark" id="ftco-navbar">
        {% endif %}
        <div class="departments" data-departments-fixed-by="">
            <div class="departments__body" id="set">
                <div class="departments__links-wrapper">
                    <ul class="departments__links">
                        {% for category in categories %}
                            <li class="departments__item">
                                <a href="{{ path('shop_products',  {shop_id: shop.id, category_id: category.category.id  }) }}">{{ category.category.name }}
                                    <svg class="departments__link-arrow" width="6px" height="9px">
                                        <use xlink:href="../../../../../public/images/sprite.svg#arrow-rounded-right-6x9"></use>
                                    </svg>
                                </a>
                                <div class="departments__megamenu departments__megamenu--xl">
                                    <div class="megamenu megamenu--departments" style="background-image: url('{{ asset('images/megamenu/my-shop-1.jpg') }}');">
                                        <ul class="megamenu__links megamenu__links--level--0">
                                            <li class="megamenu__item megamenu__item--with-submenu">
                                                <ul class="megamenu__links megamenu__links--level--1">
                                                    {% if category.subCategories | length > 0 %}
                                                        {% for sub in category.subCategories %}
                                                            <li class="megamenu__item"><a href="{{ path('shop_products',  {shop_id: shop.id, category_id: sub.id  }) }}">{{ sub.name }}</a>
                                                            </li>
                                                        {% endfor %}
                                                    {% endif %}
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <button class="departments__button">{{ constance.Menu }}</button>
        </div>
        <div class="container">
            <a class="navbar-brand" style="cursor: pointer" href="{{ path('home') }}">{{ shop.name }}</a>
            <!---------------------------------------------------------------------------------------------->
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                    </li>
                    <li class="nav-item active"><a href="{{ path('shop', {shop_id: shop.id  }) }}" class="nav-link">{{ constance.home }}</a></li>
                    {% if shop is defined %}
                        <li class="nav-item"><a href="{{ path('shop_products',  {shop_id: shop.id, category_id: 0  }) }}" class="nav-link">{{ constance.Products }}</a></li>
                        <li class="nav-item"><a href="{{ path('shop', {shop_id: shop.id  }) }}#gallery" class="nav-link">{{ constance.Gallery }}</a></li>
                        <li class="nav-item"><a href="{{ path('shop', {shop_id: shop.id  }) }}#about-us" class="nav-link">{{ constance.About }}</a></li>
                        <li class="nav-item"><a href="#footer" class="nav-link">{{ constance.contact }}</a></li>
                    {% else %}
                    <li class="nav-item"><a href="#products" class="nav-link">{{ constance.Products }}</a></li>
                    <li class="nav-item"><a href="#gallery" class="nav-link">{{ constance.Gallery }}</a></li>
                    <li class="nav-item"><a href="#about-us" class="nav-link">{{ constance.About }}</a></li>
                    <li class="nav-item"><a href="#footer" class="nav-link">{{ constance.contact }}</a></li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>

