                    {#                        </div>#}
                    {#                    </div>#}
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">{{ constance.Contact_Details }}</h2>
                        <p>Far far away, behind the word mountains, far from the countries.</p>
                        <div class="row">
                            <li class="d-flex">
                                <span>Email :</span>
                                <span class="p-2"></span>
                                <span>  {{ shop.contactDetail.email }}</span>
                            </li>
                            <li class="d-flex">
                                <span>Phone Number :</span>
                                <span class="p-2"></span>
                                <span>  {{ shop.contactDetail.phoneNumber }}</span>
                            </li>
                            <li class="d-flex">
                                <span>Address :</span>
