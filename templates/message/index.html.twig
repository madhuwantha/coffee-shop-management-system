                {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                <div class="row">
                    <div class="col-md-8 col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="mt-0 header-title">New Message</h4>
                                <hr/>
                                <div class="box-body">
                                    <div class="form-group row">
                                        <label for="employee" class="col-sm-4 control-label">Name</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.message, { 'attr': {'class': 'form-control'}}) }}
