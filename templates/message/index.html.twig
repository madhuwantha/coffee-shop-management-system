                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-info btn-block pull-right', 'label': 'Send'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
